<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HotlinenumberFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/hotline_picture"
        />

   <TextView
       android:layout_marginTop="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/hotline"
       android:textSize="25sp"
       android:textStyle="bold"
       android:textColor="@color/defence_text"
       />
  <TextView
      android:layout_marginTop="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/number"
      android:textSize="35sp"
      android:textStyle="bold"
      android:drawableLeft="@drawable/phonecall1"
      android:layout_gravity="center_horizontal"
      android:textColor="@color/hotline_text"
      />
</LinearLayout>